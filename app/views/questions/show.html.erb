<div class="row">
	<div class="col-md-9">
		<h2><%= @question.name %></h2>
		<small>Question asked <%= time_ago_in_words(@question.created_at) %> ago by <%= @question.user.full_name %> </small>
		<hr>
		<h4><%= @question.body %></h4>
		<div style="margin-bottom: 70px;"></div>
		<% if @question.answers %>
			<% @question.answers.each do |answer| %>
				<hr>
				<small>Answered by <%= answer.user.full_name %> <%= time_ago_in_words(answer.created_at) %> ago</small>
				<p><%= answer.body %></p>
			<% end %>
		<% end %>
	</div><!-- end col-md-9 -->
	<div class="col-md-3">
		<h5>This question has <%= @question.answers.count %> anwsers</h5>
	</div>
</div><!-- end row -->

<div class="row">
	<div class="col-md-9">
		<%= simple_form_for [@question, @question.answers.build] do |f| %>
		<hr>
		  <%= f.input :body, label: "You know the answer? What are you waiting for???", placeholder: "Do your best! P.S. You can't delete answers, so..." %>
		  <%= f.button :submit %>
		<% end %>
	</div>
</div>

