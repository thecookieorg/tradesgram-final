<div class="row">
	<div class="col-md-5">
		<h4>Trending Projects</h4>
		<hr>
		<% @projects.each do |project| %>
			<h3><%= link_to project.name, project %></h3>
			<small>Project posted <%= time_ago_in_words(project.created_at) %> ago by <%= project.user.full_name %></small>
			<br><br>
			<%= link_to project, class: "btn btn-warning btn-xs" do %>
				<i class="fa fa-building-o" aria-hidden="true"></i> Details
			<% end %>
			<hr>
		<% end %>
	</div>
	<div class="col-md-5">
		<h4>Top Questions For You</h4>
		<hr>
		<% @questions.each do |question| %>
			<h3><%= link_to question.name, question %></h3>
			<small>Question asked <%= time_ago_in_words(question.created_at) %> ago by <%= question.user.full_name %> </small>
			<br><br>
			<%= link_to question, class: "btn btn-success btn-xs" do %>
				<i class="fa fa-heart" aria-hidden="true"></i> Answer
			<% end %>
			<hr>
		<% end %>
	</div><!-- end col-md-9 -->
	<div class="col-md-2">
			<% if current_user.full_name.present? %>
				<h4>Your Profile Status</h4>
				<hr>
				<div class="progress progress-striped active">
				  <div class="progress-bar progress-bar-success" style="width: 100%"></div>
				</div>
				<p style="font-size: 6em; color: #18bc9c" class="text-center"><i class="fa fa-check-circle-o" aria-hidden="true"></i></p>
			<% else %>
				<h4>Update Your Profile</h4>
				<hr>
				<div class="progress progress-striped active">
				  <div class="progress-bar progress-bar-danger" style="width: 35%"></div>
				</div>
				<div class="text-center">
					<%= link_to "Update Now",edit_user_registration_path, class: "btn btn-warning btn-sm" %>
				</div>
			<% end %>
	</div><!-- end col-md-3 -->
</div><!-- end row -->