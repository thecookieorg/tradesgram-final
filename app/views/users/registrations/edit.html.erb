<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading"><h3>Edit <%= resource_name.to_s.humanize %></h3></div>
      <div class="panel-body">
        <div class="form-group">
          <%= f.input :full_name, required: true, autofocus: true %>
          <hr>
          <small>Upload avatar from local computer</small>
          <%= f.file_field :avatar %>
          
          <br>
          <small>Or paste image URL below</small>
          <%= f.input :remote_avatar_url %>
          <hr>
          <%= f.input :profile_bio, required: true %>
          <%= f.input :about_me, required: true %>
        </div><!-- end form-group -->
        <hr>
        <div class="form-group">
          <%= f.input :location, required: true, label: "Where do you live?" %>
          <%= f.input :education, required: true, label: "Most recent education" %>
          <%= f.input :employment, required: true, label: "Most recent employment" %>
        </div><!-- end form-group -->
        <div class="form-group">
          <%= f.input :email, required: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        </div><!-- end form-group -->
        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      </div><!-- end panel-body -->
      <div class="panel-footer"><%= link_to "Back", :back, class: "btn btn-link" %></div>
    </div><!-- end panel panel-default -->
  </div><!-- end col-md-8 -->
  
  <div class="col-md-4">
    <div class="panel panel-danger">
      <div class="panel-heading"><h3>Danger Zone</h3></div>
      <div class="panel-body">
        <p>Unhappy with Tradesgram? Are you sure? We will be super sad to see you leave!</p> 
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div><!-- end col-md-4 -->  
</div><!-- end row -->
<% end %>
